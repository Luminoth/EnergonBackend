<Window x:Class="EnergonSoftware.Launcher.Windows.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:launcherprops="clr-namespace:EnergonSoftware.Launcher.Properties"
        Title="{x:Static launcherprops:Resources.DebugWindowTitle}"
        Height="600" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Row="0" Grid.Column="0" Margin="5" HorizontalScrollBarVisibility="Auto"><TextBox Name="OutputText" IsReadOnly="True" /></ScrollViewer>
        <Button Grid.Row="1" Grid.Column="0" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Click="ButtonClose_Click"><TextBlock Margin="10,5" Text="{x:Static launcherprops:Resources.CloseLabel}" /></Button>
    </Grid>
</Window>
