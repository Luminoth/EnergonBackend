<Window x:Class="EnergonSoftware.Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:launcherprops="clr-namespace:EnergonSoftware.Launcher.Properties"
        Title="{x:Static launcherprops:Resources.MainWindowTitle}"
        Height="350" Width="525">
    <DockPanel>
        <Menu DockPanel.Dock="Top" IsMainMenu="True">
            <MenuItem Header="_File">
                <MenuItem Header="E_xit" Click="MenuFileExit_Click" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="About..." Click="MenuHelpAbout_Click" />
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem><TextBlock Name="StatusBarText" /></StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.RowDefinitions>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
            </Grid.ColumnDefinitions>
        </Grid>
    </DockPanel>
</Window>
