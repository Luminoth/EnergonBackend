<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
        <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
        <section name="listenAddresses" type="EnergonSoftware.Core.Configuration.ListenAddressesConfigurationSection, EnergonSoftware"/>
        <section name="instanceNotifierAddresses" type="EnergonSoftware.Core.Configuration.ListenAddressesConfigurationSection, EnergonSoftware"/>
    </configSections>
    <system.data>
        <DbProviderFactories>
            <remove invariant="System.Data.SQLite" />
            <add name="SQLite Data Provider" invariant="System.Data.SQLite" description=".Net Framework Data Provider for SQLite" type="System.Data.SQLite.SQLiteFactory, System.Data.SQLite" />
        </DbProviderFactories>
    </system.data>
    <appSettings>
        <add key="runAsService" value="false"/>

        <!-- network -->
        <add key="socketBacklog" value="10"/>
        <add key="sessionTimeout" value="-1"/>

        <!-- threads -->
        <add key="minWorkerThreads" value="5"/>
        <add key="maxWorkerThreads" value="20"/>
    </appSettings>
    <listenAddresses>
        <listenAddress name="ipv4" address="127.0.0.1" port="7766" />
        <listenAddress name="ipv6" address="::1" port="7766" />
    </listenAddresses>
    <instanceNotifierAddresses>
        <listenAddress name="ipv4" address="127.0.0.1" port="55556" />
        <listenAddress name="ipv6" address="::1" port="55556" />
    </instanceNotifierAddresses>
    <connectionStrings>
        <add name="energonsoftware" connectionString="Data Source=/EnergonSoftware/share/energonsoftware.db;Pooling=True;Max Pool Size=10" providerName="System.Data.SQLite"/>
    </connectionStrings>
    <log4net>
        <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date [%thread] %level %logger: %message%newline%exception" />
            </layout>
        </appender>
        <appender name="EventLogAppender" type="log4net.Appender.EventLogAppender" >
            <applicationName value="Energon Software Overmind" />
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date [%thread] %level %logger: %message%newline%exception" />
            </layout>
        </appender>
        <appender name="FileAppender" type="log4net.Appender.RollingFileAppender">
            <file value="/EnergonSoftware/var/Overmind.log" />
            <appendToFile value="false" />
            <rollingStyle value="Size" />
            <maxSizeRollBackups value="5" />
            <maximumFileSize value="100MB" />
            <staticLogFileName value="true" />
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date [%thread] %level %logger: %message%newline%exception" />
            </layout>
        </appender>
        <root>
            <level value="DEBUG" />
            <appender-ref ref="ConsoleAppender" />
            <!--<appender-ref ref="EventLogAppender" />-->
            <appender-ref ref="FileAppender" />
        </root>
    </log4net>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
</configuration>